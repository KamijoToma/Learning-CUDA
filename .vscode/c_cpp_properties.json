{
    "configurations": [
        {
            "name": "CUDA-Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/local/cuda/include/**",
                "/usr/include/c++/11/**",
                "/usr/include/x86_64-linux-gnu/c++/11/**"
            ],
            "defines": [
                "__CUDACC__",
                "__x86_64__"
            ],
            "compilerPath": "/usr/local/cuda/bin/nvcc",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64",
            "compilerArgs": [
                "-arch=sm_86"
            ]
        }
    ],
    "version": 4
}